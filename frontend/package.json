    "react-dropzone": "^14.3.5",
    "react-easy-crop": "^5.4.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.1.5",
    "react-slick": "^0.30.3",
    "slick-carousel": "^1.8.1",
    "use-debounce": "^10.0.4",
    "video.js": "7.20.3",
    "videojs-contrib-dash": "^5.1.1",
    "videojs-contrib-quality-levels": "^2.0.9",
    "videojs-hls-quality-selector": "^1.1.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@eslint/js": "^9.19.0",
    "@storybook/addon-a11y": "^9.0.9",
    "@storybook/addon-docs": "^9.0.10",
    "@storybook/addon-onboarding": "^9.0.9",
    "@storybook/addon-vitest": "^9.0.9",
    "@storybook/react-vite": "^9.0.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
